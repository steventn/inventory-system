<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.geometry.Insets?>


<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="steven.inventoryproject.controller.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Inventory Management System"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <TableView fx:id="partsView" GridPane.columnIndex="0"
               GridPane.rowIndex="1">
        <columns>
            <TableColumn text="Part ID">
            </TableColumn>
            <TableColumn text="Part Name">
            </TableColumn>
            <TableColumn text="Inventory Level">
            </TableColumn>
            <TableColumn text="Price/ Cost per Unit">
            </TableColumn>
        </columns>
    </TableView>

    <TableView fx:id="productsView" GridPane.columnIndex="0"
               GridPane.rowIndex="1">
        <columns>
            <TableColumn text="Product ID">
            </TableColumn>
            <TableColumn text="Product Name">
            </TableColumn>
            <TableColumn text="Inventory Level">
            </TableColumn>
            <TableColumn text="Price/ Cost per Unit">
            </TableColumn>
        </columns>
    </TableView>
</VBox>
